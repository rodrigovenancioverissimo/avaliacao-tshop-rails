<div class="container-fluid">
  <nav class="breadcrumb">
    <%= link_to "List Itens", items_path(), class:"breadcrumb-item" %> /
    <span class="breadcrumb-item active">Edit Item</span>
  </nav>
</div>
<div class="container-fluid mb-25">
  <div class="row">
    <div class="col-sm-12">
      <h1>Edit Item</h1>
    </div>
  </div>
</div>
<%= render 'shared/validates_errors', obj: @item %>
<%= form_for @item do |f| %>
  <%= render 'form_fields', f:f %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
