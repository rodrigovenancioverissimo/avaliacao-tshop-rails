<div class="container-fluid">
  <nav class="breadcrumb">
    <%= link_to "Show User", user_path(@user), class:"breadcrumb-item" %> /
    <span class="breadcrumb-user active">Edit User</span>
  </nav>
</div>
<div class="container-fluid mb-25">
  <div class="row">
    <div class="col-sm-12">
      <h1>Edit User</h1>
    </div>
  </div>
</div>
<%= form_for @user do |f| %>
  <%= render 'form_fields', f:f %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
